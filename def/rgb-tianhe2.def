Bootstrap: localimage
From: rgb-base.sif

%post
    apt -y purge libglu1-mesa-dev libglew-dev libftgl-dev libtbb-dev qtbase5-dev libxmu-dev qtwebengine5-dev
    apt -y autopurge
    apt clean

    cd /opt

    cd geant4-build/build
    cmake -G Ninja ../src/ -DCMAKE_INSTALL_PREFIX=/opt/geant4 -DCMAKE_BUILD_TYPE=release -DCMAKE_C_STANDARD=17 -DCMAKE_CXX_STANDARD=20 -DCMAKE_C_FLAGS='-march=ivybridge' -DCMAKE_CXX_FLAGS='-march=ivybridge' -DGEANT4_BUILD_MULTITHREADED=OFF -DGEANT4_INSTALL_DATADIR=/opt/geant4-data -DGEANT4_USE_GDML=ON -DGEANT4_USE_SYSTEM_ZLIB=ON -DGEANT4_INSTALL_PACKAGE_CACHE=OFF -DGEANT4_INSTALL_DATASETS_TENDL=ON
    ninja
    ninja install
    cd ../..
    rm -rf geant4-build

    cd root-build/build
    cmake -G Ninja ../src/ -DCMAKE_INSTALL_PREFIX=/opt/root -DCMAKE_BUILD_TYPE=release -DCMAKE_C_STANDARD=17 -DCMAKE_CXX_STANDARD=20 -DCMAKE_C_FLAGS='-march=ivybridge' -DCMAKE_CXX_FLAGS='-march=ivybridge' -Dfftw3=ON -Dgviz=ON -Dimt=OFF -Dmathmore=ON -Dmpi=ON -Dopengl=OFF -Dunuran=ON -During=ON -Dx11=OFF
    ninja
    ninja install
    cd ../..
    rm -rf root-build

%environment
    export LC_ALL=C
    export PATH=/opt/geant4/bin:/opt/root/bin:$PATH
    export LIBRARY_PATH=/opt/geant4/lib:/opt/root/lib:$LIBRARY_PATH
    export LD_LIBRARY_PATH=/opt/geant4/lib:/opt/root/lib:$LD_LIBRARY_PATH
    export PYTHONPATH=/opt/root/lib:$PYTHONPATH
    export MANPATH=/opt/root/man:$MANPATH
    export CMAKE_PREFIX_PATH=/opt/geant4:/opt/root:$CMAKE_PREFIX_PATH
    export JUPYTER_PATH=/opt/root/etc/notebook:$JUPYTER_PATH
    export JUPYTER_CONFIG_DIR=/opt/root/etc/notebook:$JUPYTER_CONFIG_DIR
    export GEANT4_DATA_DIR=/opt/geant4-data
    export ROOTSYS=/opt/root
    export CLING_STANDARD_PCH=none

%labels
    author zhaoshihan
    flags -march=ivybridge
