Bootstrap: localimage
From: {{RGB}}

%arguments
    RGB=
    MACE_SRC=
    MACE_COMMIT=
    MACE_TIME=

%files
    {{MACE_SRC}} /opt

%post
    cd /opt
    mkdir MACE-build
    mv MACE MACE-build
    cd MACE-build
    mkdir build
    cd build
    cmake -G Ninja ../MACE -DCMAKE_INSTALL_PREFIX=/opt/MACE -DCMAKE_BUILD_TYPE=release -DCMAKE_C_STANDARD=17 -DCMAKE_CXX_STANDARD=20 -DCMAKE_C_FLAGS='-march=ivybridge' -DCMAKE_CXX_FLAGS='-march=ivybridge' -DMACE_BUILD_TEST=OFF -DMACE_BUILTIN_GENFIT_EVENT_DISPLAY=OFF -DMACE_USE_G4VIS=OFF -DMACE_USE_STATIC_G4=OFF -DMACE_FULL_UNITY_BUILD=ON -DBUILD_SHARED_LIBS=ON
    ninja
    ninja install
    cd ../..
    rm -rf MACE-build

%environment
    export PATH=/opt/MACE/bin:$PATH
    export LIBRARY_PATH=/opt/MACE/lib:$LIBRARY_PATH
    export LD_LIBRARY_PATH=/opt/MACE/lib:$LD_LIBRARY_PATH

%labels
    MACE {{MACE_COMMIT}} ({{MACE_TIME}})
