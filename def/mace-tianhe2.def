Bootstrap: localimage
From: {{MUSTARD}}

%arguments
    MUSTARD=
    MACE_SRC_HOST_DIR=
    MACE_TIME=
    MACE_COMMIT=

%files
    {{MACE_SRC_HOST_DIR}} /opt

%post
    cd /opt
    mkdir MACE-build
    mv MACE MACE-build
    cd MACE-build

    mkdir build
    cd build
    cmake -G Ninja ../MACE -DCMAKE_INSTALL_PREFIX=/opt/MACE -DCMAKE_BUILD_TYPE=Release -DCMAKE_C_COMPILER=clang -DCMAKE_CXX_COMPILER=clang++ -DCMAKE_C_STANDARD=17 -DCMAKE_CXX_STANDARD=20 -DCMAKE_C_FLAGS='-march=ivybridge' -DCMAKE_CXX_FLAGS='-march=ivybridge' -DMACE_BUILTIN_GENFIT_EVENT_DISPLAY=OFF -DMACE_USE_G4VIS=OFF
    ninja
    ninja install
    cd ..

    cd ..
    rm -rf MACE-build

%environment
    MACE_DIR=/opt/MACE
    export PATH=$MACE_DIR/bin:$PATH
    export LIBRARY_PATH=$MACE_DIR/lib:$LIBRARY_PATH
    export LD_LIBRARY_PATH=$MACE_DIR/lib:$LD_LIBRARY_PATH
    export CMAKE_PREFIX_PATH=$MACE_DIR:$CMAKE_PREFIX_PATH
    export MACE_DATA_DIR=$MACE_DIR/share/MACE/data

%labels
    MACE {{MACE_TIME}} ({{MACE_COMMIT}})
