Bootstrap: localimage
From: rgb-base.sif

%arguments
    MPICH_VERSION=4.1.3

%post
    apt -y update
    apt -y upgrade
    apt -y install rdma-core librdmacm-dev libglu1-mesa-dev libglew-dev libftgl-dev libafterimage-dev qt3d5-dev libxmu-dev qtwebengine5-dev
    apt -y autopurge
    apt clean

    cd /opt
    mkdir mpich-build
    cd mpich-build
    wget -c -t=999 https://www.mpich.org/static/downloads/{{MPICH_VERSION}}/mpich-{{MPICH_VERSION}}.tar.gz -O mpich.tar.gz
    tar -xf mpich.tar.gz
    mkdir build
    cd build
    # ../mpich-{{MPICH_VERSION}}/configure --build=x86_64-linux-gnu --prefix=/opt/x86-64-v2/mpich --enable-error-messages=all --enable-tag-error-bits --disable-timing --disable-g --disable-mpit-pvars --enable-fast=O3,ndebug --enable-romio --disable-fortran --enable-threads=multiple --disable-dependency-tracking --disable-shared --enable-static --with-device=ch4:ofi --with-ch4-shmmods=posix CXXFLAGS=-O3
    ../mpich-{{MPICH_VERSION}}/configure --build=x86_64-linux-gnu --prefix=/opt/x86-64-v2/mpich --disable-error-checking --enable-tag-error-bits --disable-timing --disable-g --disable-mpit-pvars --enable-fast=O3,ndebug,alwaysinline --enable-romio --disable-fortran --enable-threads=multiple --disable-dependency-tracking --disable-shared --enable-static --with-device=ch4:ofi --with-ch4-shmmods=posix CFLAGS='-march=x86-64-v2' CXXFLAGS='-O3 -DNDEBUG -march=x86-64-v2'
    make -j$(grep "processor" /proc/cpuinfo | sort | uniq | wc -l)
    make install
    cd ../..
    rm -rf mpich-build

%labels
    MPI mpich-{{MPICH_VERSION}}

%environment
    export PATH=/opt/x86-64-v2/mpich/bin:$PATH
    export LIBRARY_PATH=/opt/x86-64-v2/mpich/lib:$LIBRARY_PATH
    export LD_LIBRARY_PATH=/opt/x86-64-v2/mpich/lib:$LD_LIBRARY_PATH
    export MANPATH=/opt/x86-64-v2/mpich/share/man:$MANPATH
    export CMAKE_PREFIX_PATH=/opt/x86-64-v2/mpich:$CMAKE_PREFIX_PATH
